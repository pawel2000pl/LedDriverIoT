{
    "main": "config",
    "config": {
        "type": "object",
        "fields": {
            "wifi": "wifi-settings",
            "channels": "channels-settings",
            "filters": "filters-settings",
            "hardware": "hardware-settings"
        }
    },
    "ip-address": {
        "type": "string",
        "regexp": "^((25[0-5])|(2[0-4][0-9])|(([0-1]?[0-9])?[0-9]))\\.((25[0-5])|(2[0-4][0-9])|(([0-1]?[0-9])?[0-9]))\\.((25[0-5])|(2[0-4][0-9])|(([0-1]?[0-9])?[0-9]))\\.((25[0-5])|(2[0-4][0-9])|(([0-1]?[0-9])?[0-9]))$"
    },
    "hostname-string": {
        "type": "string",
        "regexp": "^(([a-zA-Z]|[a-zA-Z][a-zA-Z0-9\\-]*[a-zA-Z0-9])\\.)*([A-Za-z]|[A-Za-z][A-Za-z0-9\\-]*[A-Za-z0-9])$",
        "max_length": 64,
        "min_length": 4
    },
    "wifi-settings": {
        "type": "object",
        "fields": {
            "hostname": "hostname-string",
            "sta_priority": {
                "type": "array",
                "item": "wifi-entry"
            },
            "access_point": {
                "type": "object",
                "fields": {
                    "enabled": "boolean",
                    "hidden": "boolean",
                    "ssid": "wifi-ssid",
                    "password": "ap-password",
                    "captive": "boolean",
                    "channel": {
                        "type": "integer",
                        "min_value": 0,
                        "max_value": 13
                    },
                    "address": "ip-address",
                    "gateway": "ip-address",
                    "subnet": "ip-address"
                }
            }
        }
    },
    "wifi-ssid": { 
        "type": "string",
        "regexp": "^[^]!#;+\\/\"\t][^]+\\/\"\t]{0,30}[^] !#;+\\/\"\t]$",
        "max_length": 256
    },
    "wifi-password": {
        "type": "string",
        "regexp": "^(.{8,63})?$",
        "max_length": 64
    },
    "wifi-entry": {
        "type": "object",
        "fields": {
            "ssid": "wifi-ssid",
            "password": "wifi-password",
            "hidden": "boolean"
        }
    },
    "ap-password": {
        "type": "string",
        "regexp": "^(.{8,63})?$",
        "max_length": 64
    },
    "channels-settings": {
        "type": "object",
        "fields": {
            "webMode": "channel-setting",
            "knobMode": "channel-setting",
            "defaultColorEnabled": "bool",
            "defaultColor": "hsvw-color",
            "autoShutdown": "auto-shutdown-settings"
        }
    },
    "channel-setting": {
        "type": "string",
        "regex": "^((hsl)|(hsv)|(rgb))$"
    },
    "filter-settings": {
        "type": "array",
        "length": 9,
        "item": {
            "type": "float",
            "min_value": -1,
            "max_value": 1
        }
    },
    "filters-settings": {
        "type": "object",
        "fields": {
            "inputFilters": {
                "type": "object",
                "fields": {
                    "hue": "filter-settings",
                    "saturation": "filter-settings",
                    "value": "filter-settings",
                    "lightness": "filter-settings",
                    "red": "filter-settings",
                    "green": "filter-settings",
                    "blue": "filter-settings",
                    "white": "filter-settings"
                }
            },
            "globalInputFilters": "filter-settings",
            "globalOutputFilters": "filter-settings",
            "outputFilters": {
                "type": "object",
                "fields": {
                    "red": "filter-settings",
                    "green": "filter-settings",
                    "blue": "filter-settings",
                    "white": "filter-settings"
                }
            }
        }
    },
    "input-selector": {
        "type": "integer",
        "min_value": 0,
        "max_value": 5
    },
    "output-selector": {
        "type": "integer",
        "min_value": 0,
        "max_value": 4
    },
    "fraction": {
        "type": "float",
        "min_value": 0,
        "max_value": 1
    },
    "hardware-settings": {
        "type": "object",
        "fields":{
            "potentionemterConfiguration": {
                "type": "object",
                "fields": {
                    "hue": "input-selector",
                    "saturation": "input-selector",
                    "value": "input-selector",
                    "lightness": "input-selector",
                    "red": "input-selector",
                    "green": "input-selector",
                    "blue": "input-selector",
                    "white": "input-selector"
                }
            },
            "transistorConfiguration": {
                "type": "object",
                "fields": {
                    "output 0": "output-selector",
                    "output 1": "output-selector",
                    "output 2": "output-selector",
                    "output 3": "output-selector"
                }
            },
            "bias": {
                "type": "object",
                "fields": {
                    "up": "fraction",
                    "down": "fraction"
                }
            },
            "scalling": {
                "type": "object",
                "fields": {
                    "red": "fraction",
                    "green": "fraction",
                    "blue": "fraction",
                    "white": "fraction"
                }
            },
            "frequency": {
                "type": "integer",
                "min_value": 1000,
                "max_value": 32000
            },
            "phaseMode": "integer",
            "knobActivateDelta": "fraction",
            "enableColorKnob": "boolean",
            "enableWhiteKnob": "boolean",
            "invertOutputs": "boolean",
            "knobsNoisesReduction": {
                "type": "float",
                "min_value": 0,
                "max_value": 1000
            },
            "gateLoadingTime": {
                "type": "float",
                "min_value": 0,
                "max_value": 32
            }
        }
    },
    "color-channels": {
        "type": "array",
        "length": 4,
        "item": "fraction"
    },
    "favorite-color": {
        "type": "string",
        "regexp": "^[01][0-9A-F]{8}$"
    },
    "favorites-list": {
        "type": "array",
        "max_length": 64,
        "item": "favorite-color"
    },
    "hsvw-color": {
        "hue": "fraction",
        "saturation": "fraction",
        "value": "fraction",
        "white": "fraction"
    },
    "auto-shutdown-settings": {
        "type": "object",
        "fields": {
            "enabled": "bool",
            "timeout": {
                "type": "integer",
                "min_value": 1,
                "max_value": 31536000
            },
            "fadeOutTime": {
                "type": "integer",
                "min_value": 0,
                "max_value": 7200
            }
        }
    },
    "animation-period": {
        "type": "integer",
        "min_value": 0,
        "max_value": 86400000
    },
    "animation-stage": {
        "type": "object",
        "fields": {
            "fade_in_ms": "animation-period",
            "fade_in_randomness": "animation-period",
            "period_ms": "animation-period",
            "period_randomness": "animation-period",
            "base_color": "color-channels",
            "color_randomness": "color-channels",
            "next_stages": {
                "type": "array",
                "item": {
                    "type": "integer",
                    "min_value": 0,
                    "max_value": 15
                },
                "max_length": 16
            },
            "use_white": "bool"
        }
    },
    "animation-start": {
        "type": "object",
        "fields": {
            "id": {
                "type": "integer",
                "min_value": 0,
                "max_value": 15
            }
        }
    },
    "animation-sequence": {
        "type": "object",
        "fields": {
            "name": {
                "type": "string",
                "max_length": 64
            },
            "data": {
                "type": "array",
                "max_length": 16,
                "item": "animation-stage"
            }
        }
    },
    "animations-list": {
        "type": "array",
        "item": "animation-sequence",
        "max_length": 64
    }
}
