{
    "main": "config",
    "config": {
        "type": "object",
        "fields": {
            "wifi": "wifi-settings",
            "bluetooth": "bluetooth-settings",
            "channels": "channels-settings",
            "filters": "filters-settings",
            "hardware": "hardware-settings"
        }
    },
    "wifi-settings": {
        "type": "object",
        "fields": {
            "sta_priority": {
                "type": "array",
                "item": {
                    "type": "object",
                    "fields": {
                        "ssid": "wifi-ssid",
                        "password": "wifi-password"
                    }
                }
            },
            "access_point": {
                "type": "object",
                "fields": {
                    "enabled": {
                        "type": "boolean"
                    },
                    "ssid": "wifi-ssid",
                    "password": "wifi-password"
                }
            },
            "strict": {
                "type": "boolean"
            },
            "strictList": "mac-list"
        }

    },
    "wifi-ssid": { 
        "type": "string",
        "regexp": "^[^]!#;+\\/\"\t][^]+\\/\"\t]{,30}[^] !#;+\\/\"\t]$"
    },
    "wifi-password": {
        "type": "string",
        "regexp": ".{,63}"
    },
    "mac-list": {
        "type": "array",
        "item": {
           "type": "string",
           "regex": "^([0-9A-Fa-f]{2}[:\\-]){5}([0-9A-Fa-f]{2})$"
        }
    },
    "bluetooth-settings": {
        "type": "object",
        "fields": {
            "active": "boolean",
            "name": {
                "type": "string",
                "max_length": 31,
                "regex": "^[A-Za-z0-9\\-_. ]{1,31}$"
            },
            "strict": "boolean",
            "strictList": "mac-list"
        }
    },
    "channels-settings": {
        "webMode": "channel-setting",
        "bluetoothMode": "channel-setting",
        "knobMode": "channel-setting"
    },
    "channel-setting": {
        "type": "string",
        "regex": "^((hsl)|(hsv)|(rgb))$" 
    },
    "filter-settings": {
        "type": "array",
        "length": 6,
        "item": {
            "type": "float",
            "min_value": -1,
            "max_value": 1
        }
    },
    "filters-settings": {
        "type": "object",
        "fields": {
            "inputFilters": {
                "type": "object",
                "fields": {
                    "hue": "filter-settings",
                    "saturation": "filter-settings",
                    "value": "filter-settings",
                    "lightness": "filter-settings",
                    "red": "filter-settings",
                    "green": "filter-settings",
                    "blue": "filter-settings",
                    "white": "filter-settings"
                }
            },
            "globalInputFilters": "filter-settings",
            "globalOutputFilters": "filter-settings",
            "outputFilters": {
                "type": "object",
                "fields": {
                    "red": "filter-settings",
                    "green": "filter-settings",
                    "blue": "filter-settings",
                    "white": "filter-settings"
                }
            }
        }
    },
    "input-selector": {
        "type": "integer",
        "min_value": 0,
        "max_value": 5
    },
    "output-selector": {
        "type": "integer",
        "min_value": 0,
        "max_value": 4
    },
    "fraction": {
        "type": "float",
        "min_value": 0,
        "max_value": 1
    },
    "hardware-settings": {
        "type": "object",
        "fields":{
            "potentionemterConfiguration": {
                "type": "object",
                "fields": {
                    "hue": "input-selector",
                    "saturation": "input-selector",
                    "value": "input-selector",
                    "lightness": "input-selector",
                    "red": "input-selector",
                    "green": "input-selector",
                    "blue": "input-selector",
                    "white": "input-selector"
                }
            },
            "transistorConfiguration": {
                "type": "object",
                "fields": {
                    "output 0": "output-selector",
                    "output 1": "output-selector",
                    "output 2": "output-selector",
                    "output 3": "output-selector"
                }
            },
            "bias": {
                "type": "object",
                "fields": {
                    "up": "fraction",
                    "down": "fraction"
                }
            },
            "knobActivateDelta": "fraction",
            "enbleWhiteKnob": "boolean"
        }
    }
}
